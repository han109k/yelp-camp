<% layout("layouts/boilerplate") %>

<h1 class="text-center">New Campground</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validate-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id=title" required> <!-- !!!!!! -->
                <div class="invalid-feedback">
                    Can't be blank
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id=location" required> <!-- !!!!!! -->
                <div class="invalid-feedback">
                    Can't be blank
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id=image" required> <!-- !!!!!! -->
                <div class="invalid-feedback">
                    Can't be blank
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id=description" required></textarea> <!-- !!!!!! -->
                <div class="invalid-feedback">
                    Can't be blank
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" name="campground[price]" id="price" aria-label="Amount" placeholder="0.00" required>
                    <div class="invalid-feedback">
                        Can't be blank
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary text-center">Submit</button>
            </div>
            
        </form>
        <a href="/campgrounds">&crarr; All Campgrounds</a>
    </div>
</div>