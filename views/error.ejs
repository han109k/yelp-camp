<% layout("layouts/boilerplate") %>

<div class="row bg">
    <div class="col-8 offset-2">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%=err.status%></h4>
            <p><%= err.message%></p>
            <hr>
            <p class="mb-0">
                <p class="text-center">
                <button class="btn btn-danger" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    &plus;
                  </button>
                </p>
                <div class="collapse" id="collapseExample">
                  <div class="card card-body">
                    <%= err.stack%>
                  </div>
                </div>
            </p>
        </div>
    </div>
</div>

<script>document.querySelector("body").style.backgroundColor="#212529"</script>