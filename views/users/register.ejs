<% layout("layouts/boilerplate") %>

<div class="container d-flex flex-column">

    <div class="d-flex row mb-1">
        <div class="col text-center">
            <h1>Register</h1>
        </div>
    </div>
    <div class="d-flex row justify-content-center mb-5">
        <div class="col-sm-10 col-md-8 col-lg-6">
            <form action="/register" method="POST" class="validate-form" novalidate>
                <div class="mb-4">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="username" autofocus required> <!-- !!!!!! -->
                    <div class="invalid-feedback">
                        Can't be blank
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" required>
                    <!-- !!!!!! -->
                    <div class="invalid-feedback">
                        Can't be blank
                    </div>
                </div>
                <div class="mb-5">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required>
                    <!-- !!!!!! -->
                    <div class="invalid-feedback">
                        Can't be blank
                    </div>
                </div>
                <div class="text-center mt-5">
                    <button class="btn btn-info btn-lg">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>